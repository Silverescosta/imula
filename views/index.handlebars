<main>
    <article id="article-home">
        <div class="news">
            <h1>Corretora de Imovéis</h1>
            <p>Sistema Administrativo de Imovéis</p>
        </div>
    </article>
    <div class="container">
        <div class="row">
            {{#each produtos}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="/images/uploads/{{imagem}}" alt="">
                        <div class="textos">
                            <p>{{nome}}</p>
                            <p>{{valor}}</p>
                        </div>
                        <a href="/editar/{{id}}" class="btn btn-warning">Alterar</a>
                        <a href="/remover/{{id}}/{{imagem}}" onclick="return confirm('Tem certeza que deseja remover este produto?');" class="btn btn-danger">Remover</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>